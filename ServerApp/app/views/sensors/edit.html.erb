<h1> Editing Sensor</h1>
<p>
	<%= form_tag(@form_url, method: "post", class:"form-group") do %>
		<%= label_tag(:sensor_id, "Sensor ID") %>
		<br>
		<div class="form-control">
			<%= @sensor.sensor_id %>
		</div>
		<br>
		<%= label_tag(:sensor_type, "Sensor Type") %>
		<%= select_tag(:sensor_type, options_for_select(["wind speed", "wind direction", "rainfall", "water level", "water temp", "ambient temp", "humidity", "flow rate"]), class:"form-control") %>
		<br>
		<%= label_tag(:update_rate, "Update Rate") %>
		<%= text_field_tag(:update_rate, nil,class:"form-control")%>
		<%= label_tag(:location, "Location") %>
		<%= text_field_tag(:location, nil,class:"form-control")%>
		<br>
		<%= submit_tag("Submit", class:"form-control") %>
	<% end %>
</p>

<script type="text/javascript">
document.getElementById('update_rate').value = <%= @sensor.update_rate%>
document.getElementById('location').value = "<%= @sensor.location%>"
</script>
<p>
	<a href="/sensor_information">Back</a>
</p>