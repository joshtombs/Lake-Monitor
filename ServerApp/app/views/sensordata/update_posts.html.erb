<p id="notice"><%= notice %></p>

<h1>Posts During Range:</h1>
<%= form_tag("/update_posts", method: "post") do %>
	<%= select_date @starting_date, class: "form-control", prefix: :start_date%>
	<%= select_date @ending_date, class: "form-control",prefix: :end_date%>
	<%= submit_tag("Submit") %>
<% end %>

<p class="col-md-12">
	<table class="table">
	  <thead>
	    <tr>
	      <th>Time Recorded</th>
	      <th>SensorID</th>
	      <th>Sensor Type</th>
	      <th>Value</th>
	      <th colspan="3"></th>
	    </tr>
	  </thead>

	  <tbody>
	    <% @range_data.each do |data| %>
	      <tr>
	        <td><%= data.time_recorded %></td>
	        <td><%= data.sensor_id %></td>
	        <td><%= data.sensor_type.titleize %></td>
	        <td><%= data.value %></td>
	      </tr>
	    <% end %>
	  </tbody>
	</table>
</p>