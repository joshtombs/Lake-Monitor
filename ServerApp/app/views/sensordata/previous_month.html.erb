<p id="notice"><%= notice %></p>

<h1>Data For <%= @month_name + " " + @year.to_s%>:</h1>
<p>
  <table class="table">
  	<thead>
  		<tr>
  			<th>Date</th>
  			<th>Wind Speed</th>
  			<th>Wind Direction</th>
  			<th>Rainfall</th>
  			<th>Water Level</th>
  			<th>Water Temp</th>
  			<th>Ambient Temp</th>
  			<th>Humidity</th>
  			<th>Flow Rate</th>
  		</tr>
  	</thead>
  	<tbody>
      <% @dates.each do |date| %>
        <tr>
          <td><a href="/show_previous/<%= @month_name + '/' + @year.to_s + '/' + date.strftime("%d") %>"><%= date.strftime("%m/%d/%y") %></a></td>
          <td><%= get_daily_value(date, 'wind speed') %></td>
          <td><%= get_daily_value(date, 'wind direction') %></td>
          <td><%= get_daily_value(date, 'rainfall') %></td>
          <td><%= get_daily_value(date, 'water level') %></td>
          <td><%= get_daily_value(date, 'water temp') %></td>
          <td><%= get_daily_value(date, 'ambient temp') %></td>
          <td><%= get_daily_value(date, 'humidity') %></td>
          <td><%= get_daily_value(date, 'flow rate') %></td>
        </tr>
      <% end %>
  	</tbody>
  </table>
</p>

<p>
	<a href="/previous_data">Back</a>
</p>