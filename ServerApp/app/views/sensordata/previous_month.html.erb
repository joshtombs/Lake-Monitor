<p id="notice"><%= notice %></p>

<h1>Data For <%= @month_name + " " + @year.to_s%>:</h1>
<p>
  <table class="table">
  	<thead>
  		<tr>
  			<th>Date</th>
  			<th>Wind Speed</th>
  			<th>Wind Direction</th>
  			<th>Rainfall</th>
  			<th>Water Level</th>
  			<th>Water Temp</th>
  			<th>Ambient Temp</th>
  			<th>Humidity</th>
  			<th>Flow Rate</th>
  		</tr>
  	</thead>
  	<tbody>
      <% @dates.each do |date| %>
        <tr>
          <td><a href="/show_previous/<%= @month_name + '/' + @year.to_s + '/' + date.strftime("%d") %>"><%= date.strftime("%m/%d/%y") %></a></td>
          <td><%= get_daily_wind_speed(date) %></td>
          <td><%= get_daily_wind_direction(date) %></td>
          <td><%= get_daily_rainfall(date) %></td>
          <td><%= get_daily_water_level(date) %></td>
          <td><%= get_daily_water_temp(date) %></td>
          <td><%= get_daily_ambient_temp(date) %></td>
          <td><%= get_daily_humidity(date) %></td>
          <td><%= get_daily_flow_rate(date) %></td>
        </tr>
      <% end %>
  	</tbody>
  </table>
</p>

<p>
	<a href="/previous_data">Back</a>
</p>